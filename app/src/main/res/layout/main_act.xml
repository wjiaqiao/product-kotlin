<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/conLay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".ui.main.MainAct">

    <com.jiaqiao.product.widget.ButtonStateView
        android:id="@+id/btn_1"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="130dp"
        android:gravity="center"
        android:text="Button"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:bsv_radius="10dp"
        app:bsv_default_text_color="@android:color/holo_green_light"
        app:bsv_touch_text_color="@android:color/holo_red_dark"
        app:bsv_disenable_text_color="@android:color/darker_gray"/>

    <com.jiaqiao.product.widget.ButtonStateView
        android:id="@+id/btn_2"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="130dp"
        android:enabled="false"
        android:gravity="center"
        android:text="Button2"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:bsv_left_top_radius="5dp"
        app:bsv_right_top_radius="10dp"
        app:bsv_left_bottom_radius="15dp"
        app:bsv_right_bottom_radius="20dp"
        app:bsv_default_text_color="@android:color/holo_green_light"
        app:bsv_touch_text_color="@android:color/holo_red_dark"
        app:bsv_disenable_text_color="@android:color/darker_gray" />

</LinearLayout>